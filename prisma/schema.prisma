generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model categorias {
  id                   Int                @id @default(autoincrement())
  categoria            String
  subcategoria         String?
  supermercado         String?
  co2e_promedio_por_kg Float
  productos_recibo     productos_recibo[]
}

model productos_recibo {
  id               Int         @id @default(autoincrement())
  recibo_id        String?     @db.Uuid
  nombre_detectado String
  productos        String
  categoria_id     Int?
  cantidad         Float?
  peso_estimado_kg Float?
  co2e_estimado    Float?
  categorias       categorias? @relation(fields: [categoria_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  recibos          recibos?    @relation(fields: [recibo_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model recibos {
  id                 String             @id @db.Uuid
  usuario_id         String?            @db.Uuid
  fuente             String
  texto_original     String?
  fecha_recibo       DateTime?          @db.Timestamp(6)
  co2e_total         Float?
  es_recibo_verde    Boolean?           @default(false)
  puntuacion_impacto Int?
  evaluacion_huella  String?
  detalle_evaluacion String?
  creado_en          DateTime?          @default(now()) @db.Timestamp(6)
  productos_recibo   productos_recibo[]
  usuarios           usuarios?          @relation(fields: [usuario_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model usuarios {
  id                    String    @id @db.Uuid
  objetivo_consumo      String?
  estilo_vida           String?
  evita_ingredientes    String[]
  prefiere_supermercado String?
  precio_prioridad      Boolean?  @default(false)
  empaques_sostenibles  Boolean?  @default(true)
  recibos               recibos[]
}

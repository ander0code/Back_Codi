{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./source",
    "declaration": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./source/types"],
    "noImplicitAny": false,
    "strict": false,
    "strictNullChecks": false
  },
  "include": ["source/**/*"],
  "exclude": ["node_modules", "dist"]
}

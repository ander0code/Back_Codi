{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./source",
		"declaration": true,
		"resolveJsonModule": true,
		"typeRoots": ["./node_modules/@types", "./source/types"]
	},
	"include": ["source/**/*"],
	"exclude": ["node_modules", "dist"]
}
